{
  "name": "beater",
  "description": "beater: bouzuya's easy test runner. it is inspired by eater.",
  "version": "5.0.0",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net/"
  },
  "babel": {
    "presets": [
      "es2015",
      "babel-preset-power-assert"
    ]
  },
  "bugs": {
    "url": "https://github.com/bouzuya/beater/issues"
  },
  "dependencies": {
    "beater-reporter": "^0.4.0",
    "beater-tap-reporter": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^8.0.13",
    "@types/power-assert": "^1.4.29",
    "@types/proxyquire": "1.3.27",
    "@types/sinon": "2.3.2",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-power-assert": "^1.0.0",
    "cpx": "^1.5.0",
    "npm-run-all": "4.0.2",
    "nyc": "^11.0.3",
    "power-assert": "^1.4.4",
    "proxyquire": "1.8.0",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.8",
    "typescript": "2.4.1",
    "watch": "^1.0.2"
  },
  "files": [
    "lib/"
  ],
  "homepage": "https://github.com/bouzuya/beater",
  "keywords": [
    "beater",
    "bouzuya",
    "eater",
    "runner",
    "test"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/beater.git"
  },
  "scripts": {
    "build": "npm-run-all -s \"build:tmp:ts\" \"build:tmp:es2015\" \"build:lib\"",
    "build:lib": "npm-run-all -p \"build:lib:*\"",
    "build:lib:dts": "cpx \".tmp/es2015/src/**/*.d.ts\" \"lib\"",
    "build:lib:js": "cpx \".tmp/es5/src/**/*.js\" \"lib\"",
    "build:tmp:es2015": "babel .tmp/es2015/ -d .tmp/es5/",
    "build:tmp:ts": "tsc",
    "clean": "rimraf \".tmp\" \"lib\"",
    "prepublish": "npm-run-all -s \"clean\" \"build\"",
    "test": "nyc node .tmp/es5/test/index.js",
    "watch": "npm-run-all -p \"watch:*\"",
    "watch:es2015": "npm run build:tmp:es2015 -- --watch",
    "watch:lib": "watch --wait 2 'npm run build:lib' '.tmp/es5/src/'",
    "watch:test": "watch --wait 2 'npm test' '.tmp/es5/src' '.tmp/es5/test'",
    "watch:ts": "tsc --watch"
  },
  "typings": "lib/index.d.ts"
}
